<div class="configuracion">
  <h1>Aquí realizaremos las pruebas de configuración</h1>
  <form id="form1" name="form1" action="/config" method="post">
    <div class="row">
      <div class="col-sm-6">
        Key
      </div>
      <div class="col-sm-6">
        Value
      </div>
    </div>

    <div class="form-group">
      <label for="sitename">Nombre del sitio</label>
      <input type="text" class="form-control" name="sitename" id="sitename" value="{{data.vars.sitename}}"/>
    </div>

    <div class="form-group">
      <button class="btn btn-primary" type="submit">Enviar</button>
    </div>

  </form>
</div>
