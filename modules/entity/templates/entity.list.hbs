<h1>Listado de entidades</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>created</th>
    <th>Status</th>
  </tr>
{{#each data.entities}}
  <tr>
    <td><a href="{{#if alias}}{{alias}}{{else}}/entity/{{_id}}{{/if}}">{{title}}</a></td>
    <td>{{created}}</td>
    <td>
      {{status}}
    </td>
    <td>
      <a href="/entity/edit/{{_id}}">Editar</a>
    </td>
  </tr>
  {{/each}}
</table>
<a class="btn btn-primary" href="/entity/new">Nueva entidad</a>
